{
  "compilerOptions": {
    "outDir": "./build",
    "module": "es2022",
    "moduleResolution": "Bundler",
    "target": "es2022",
    "lib": ["ESNext", "es2022", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "experimentalDecorators": false,
    "noImplicitOverride": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["source"]
}
